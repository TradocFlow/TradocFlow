// Color palette for Tradocument Reviewer GUI
export global Colors {
    // Primary colors
    out property <color> primary: #2563eb;
    out property <color> primary_hover: #1d4ed8;
    out property <color> primary_light: #dbeafe;
    
    // Background colors
    out property <color> background: #ffffff;
    out property <color> surface: #f8fafc;
    out property <color> surface_hover: #f1f5f9;
    
    // Text colors
    out property <color> text_primary: #1e293b;
    out property <color> text_secondary: #64748b;
    out property <color> text_muted: #94a3b8;
    
    // Border colors
    out property <color> border: #e2e8f0;
    out property <color> border_active: #cbd5e1;
    out property <color> border_dashed: #cbd5e1;
    
    // Status colors
    out property <color> success: #10b981;
    out property <color> success_light: #d1fae5;
    out property <color> success_background: #f0fdf4;
    out property <color> warning: #f59e0b;
    out property <color> warning_light: #fef3c7;
    out property <color> warning_background: #fffbeb;
    out property <color> error: #ef4444;
    out property <color> error_light: #fee2e2;
    out property <color> error_background: #fef2f2;
    out property <color> info: #06b6d4;
    out property <color> info_light: #cffafe;
    
    // Editor colors
    out property <color> editor_background: #ffffff;
    out property <color> editor_selection: #3b82f626;
    out property <color> editor_line_number: #94a3b8;
    
    // Sidebar colors
    out property <color> sidebar_background: #f8fafc;
    out property <color> sidebar_button_hover: #e2e8f0;
    out property <color> sidebar_button_active: #dbeafe;
    
    // Material Design colors for project browser
    out property <color> on_surface: #1e293b;
    out property <color> on_surface_variant: #64748b;
    out property <color> on_primary: #ffffff;
    out property <color> surface_variant: #f1f5f9;
    out property <color> outline: #cbd5e1;
    out property <color> outline_variant: #e2e8f0;
    out property <color> shadow: #00000040;
}