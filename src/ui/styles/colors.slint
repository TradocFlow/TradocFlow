// Color palette for Tradocument Reviewer GUI
export global Colors {
    // Primary colors
    out property <color> primary: #2563eb;
    out property <color> primary-hover: #1d4ed8;
    out property <color> primary-light: #dbeafe;
    
    // Background colors
    out property <color> background: #ffffff;
    out property <color> surface: #f8fafc;
    out property <color> surface-hover: #f1f5f9;
    
    // Text colors
    out property <color> text-primary: #1e293b;
    out property <color> text-secondary: #64748b;
    out property <color> text-muted: #94a3b8;
    
    // Border colors
    out property <color> border: #e2e8f0;
    out property <color> border-active: #cbd5e1;
    
    // Status colors
    out property <color> success: #10b981;
    out property <color> warning: #f59e0b;
    out property <color> error: #ef4444;
    out property <color> info: #06b6d4;
    
    // Editor colors
    out property <color> editor-background: #ffffff;
    out property <color> editor-selection: #3b82f626;
    out property <color> editor-line-number: #94a3b8;
    
    // Sidebar colors
    out property <color> sidebar-background: #f8fafc;
    out property <color> sidebar-button-hover: #e2e8f0;
    out property <color> sidebar-button-active: #dbeafe;
    
    // Material Design colors for project browser
    out property <color> on-surface: #1e293b;
    out property <color> on-surface-variant: #64748b;
    out property <color> on-primary: #ffffff;
    out property <color> surface-variant: #f1f5f9;
    out property <color> outline: #cbd5e1;
    out property <color> outline-variant: #e2e8f0;
    out property <color> shadow: #00000040;
}