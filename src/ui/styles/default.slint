import { Colors } from "colors.slint";

// Default theme and styling
export global Theme {
    // Typography
    out property <length> font-size-small: 12px;
    out property <length> font-size-base: 14px;
    out property <length> font-size-large: 16px;
    out property <length> font-size-title: 18px;
    
    // Spacing
    out property <length> spacing-xs: 4px;
    out property <length> spacing-sm: 8px;
    out property <length> spacing-md: 16px;
    out property <length> spacing-lg: 24px;
    out property <length> spacing-xl: 32px;
    
    // Border radius
    out property <length> border-radius-sm: 4px;
    out property <length> border-radius-md: 6px;
    out property <length> border-radius-lg: 8px;
    
    // Component sizes
    out property <length> button-height: 36px;
    out property <length> toolbar-height: 48px;
    out property <length> sidebar-width: 240px;
    out property <length> menubar-height: 30px;
    
    // Animations
    out property <duration> animation-fast: 150ms;
    out property <duration> animation-normal: 250ms;
    out property <duration> animation-slow: 350ms;
}