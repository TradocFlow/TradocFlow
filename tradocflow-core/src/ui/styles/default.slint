import { Colors } from "colors.slint";

// Default theme and styling
export global Theme {
    // Typography
    out property <length> font_size_small: 12px;
    out property <length> font_size_base: 14px;
    out property <length> font_size_lg: 16px;
    out property <length> font_size_xl: 18px;
    out property <length> font_size_xxl: 24px;
    out property <length> font_size_title: 18px;
    
    // Spacing
    out property <length> spacing_xs: 4px;
    out property <length> spacing_sm: 8px;
    out property <length> spacing_md: 16px;
    out property <length> spacing_lg: 24px;
    out property <length> spacing_xl: 32px;
    
    // Border radius
    out property <length> border_radius_sm: 4px;
    out property <length> border_radius_md: 6px;
    out property <length> border_radius_lg: 8px;
    
    // Component sizes
    out property <length> button_height: 36px;
    out property <length> toolbar_height: 48px;
    out property <length> sidebar_width: 240px;
    out property <length> menubar_height: 30px;
    
    // Animations
    out property <duration> animation_fast: 150ms;
    out property <duration> animation_normal: 250ms;
    out property <duration> animation_slow: 350ms;
}